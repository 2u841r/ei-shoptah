---
const allPosts = Object.values(
  import.meta.glob("../pages/2025/*.md", { eager: true })
).sort((a, b) => b.frontmatter.week - a.frontmatter.week);
---

<div id="container">
  <table>
    <thead>
      <tr>
        <th>সংখ্যা</th>
        <th>প্রকাশিত</th>
      </tr>
    </thead>
    <tbody>
      {
        allPosts.map((post: any) => (
          // <li>
          //   <a href={post.url}>{post.frontmatter.week} - {post.frontmatter.published}</a>
          // </li>

          <tr>
            <td>
              <a href={post.url}> #{post.frontmatter.week} </a>
            </td>
            <td>
              <a href={post.url}> {post.frontmatter.published} </a>
            </td>
          </tr>
        ))
      }
    </tbody>
  </table>
</div>

<style>
  #container {
    background-color: #ffffe0;
    padding: 1rem;
  }

  li {
    padding: 0.2rem;
    list-style: none;
    margin: 0.5rem 0;
  }

  a {
    text-decoration: none;
    color: black;
  }
  a:hover{
    background-color: lightblue;
  }
</style>
